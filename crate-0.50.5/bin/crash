#!/bin/sh

PYTHON_EXECUTABLE=
for PYTHON in python python2 python3
do
    if [ -e "`which ${PYTHON}`" ]
    then
        PYTHON_EXECUTABLE=`which ${PYTHON}`
        break
    fi
done

if [ ! -e "${PYTHON_EXECUTABLE}" ]; then
    echo "No python executable found. Please install python in order to use crash"
    exit 1
fi

`dirname $0`/crash_standalone "$@"
exit $?
